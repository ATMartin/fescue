{{outlet}}

<form {{action 'save' on="submit"}}>
  <fieldset>

<div class="options-form">

  {{input type="text" name="acreage" placeholder="How many acres do you have?" value=model.acreage required=true}}

  <!-- {{input type="text" name="shrub" placeholder="Do you have shrubs that need trimming?" value=model.shrub required=true}} -->

  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
      Do you have shrubs that need trimming?
      <span class="caret"></span>
    </button>

    <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Yes</a></li>
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">No</a></li>
    </ul>
  </div>

  {{input type="text" name="brush" placeholder="Do you have leaves or other brush that requires hauling off?" value=model.brush required=true}}

<button>Submit</button>
</div>

</fieldset>
</form>
