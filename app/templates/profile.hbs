{{outlet}}


{{#link-to 'profile-edit'}}<div class="prof-edit-button">Edit</div>{{/link-to}}
<div class="profile-info">

  <div class="profile-headline">
  <h2>Contact Info:</h2>
  </div>

<ul>
  <li>{{session.currentUser.firstName}} {{session.currentUser.lastName}}</li>
  <li>{{session.currentUser.phone}}</li>
  <li>{{session.currentUser.address}}</li>
  <li>{{session.currentUser.city}}, {{session.currentUser.state}}, {{session.currentUser.zipCode}}</li>
</ul>

<div class="profile-headline">
<h2>Yard Info:</h2>
</div>
{{#each request in model}}
<ul>
  <li>{{request.acreage}} acres</li>
  <li>Shrubs need trimming: {{request.shrub}}</li>
  <li>Brush: {{request.brush}}</li>
</ul>

{{/each}}
</div>
